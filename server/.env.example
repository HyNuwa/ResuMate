# ==================================================
# CONFIGURACIÓN GENERAL
# ==================================================
NODE_ENV=development
PORT=5000

# ==================================================
# URLS DE CLIENTES (CORS)
# ==================================================
CLIENT_URL=http://localhost:5173
ADMIN_CLIENT_URL=http://localhost:5175

# ==================================================
# SEGURIDAD - SESIONES
# ==================================================
# Genera un secreto fuerte con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=your-super-secret-key-here-change-this-in-production

# ==================================================
# BASE DE DATOS
# ==================================================
# PostgreSQL connection string (solo requerido en producción)
# Formato: postgresql://usuario:password@host:puerto/nombre_db
DATABASE_URL=postgresql://user:password@host.neon.tech/resumate?sslmode=require
DB_HOST=localhost
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=
DB_DIALECT=

# ==================================================
# GEOLOCALIZACIÓN
# ==================================================
# Token de ipinfo.io (opcional, mejora la precisión)
# Obtén uno gratis en: https://ipinfo.io/signup
IPINFO_TOKEN=

# Anonimizar IPs en logs (true/false)
GEO_ANONYMIZE_IPS=false

# ==================================================
# AUTENTICACIÓN - GOOGLE OAUTH (FUTURO)
# ==================================================
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# ==================================================
# AUTENTICACIÓN - GITHUB OAUTH (FUTURO)
# ==================================================
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# ==================================================
# EMAIL (FUTURO)
# ==================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ==================================================
# CLOUDINARY (FUTURO - Para imágenes)
# ==================================================
# CLOUDINARY_CLOUD_NAME=
# CLOUDINARY_API_KEY=
# CLOUDINARY_API_SECRET=

# ==================================================
# RATE LIMITING
# ==================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# ==================================================
# LOGS
# ==================================================
LOG_LEVEL=info
LOG_FORMAT=combined

# ==================================================
# OPENROUTER
# ==================================================
# OpenRouter API (obtén en https://openrouter.ai/keys)
OPENROUTER_API_KEY=your_key_here
OPENAI_API_KEY=your_openai_key_here

# LLM Model (via OpenRouter)
# Opciones gratuitas:
# - groq/llama-3.3-70b-versatile (más rápido)
# - meta-llama/llama-3.1-8b-instruct (más económico)
LLM_MODEL=groq/llama-3.3-70b-versatile

# App Info (requerido por OpenRouter)
APP_URL=http://localhost:5173
APP_NAME=ResuMate

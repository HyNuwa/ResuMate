NODE_ENV=development
PORT=3000

CLIENT_URL=http://localhost:5173
ADMIN_CLIENT_URL=http://localhost:5175

SESSION_SECRET=

# Base de datos (comentado hasta que la configures)
# DATABASE_URL=postgresql://user:password@localhost:5432/resumate_db
DB_HOST=localhost
DB_PORT=
DB_USER=
DB_PASSWORD=
DB_NAME=resumate
DB_DIALECT=postgres


# Geolocalización (opcional)
IPINFO_TOKEN=
GEO_ANONYMIZE_IPS=false

# ==================================================
# RATE LIMITING
# ==================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# ==================================================
# LOGS
# ==================================================
LOG_LEVEL=info
LOG_FORMAT=combined

# ==================================================
# OPENROUTER
# ==================================================
# OpenRouter API (obtén en https://openrouter.ai/keys)
OPENROUTER_API_KEY=
OPENAI_API_KEY=

# LLM Model (via OpenRouter)
# Opciones gratuitas:
# - groq/llama-3.3-70b-versatile (más rápido)
# - meta-llama/llama-3.1-8b-instruct (más económico)
LLM_MODEL=

# App Info (requerido por OpenRouter)
APP_URL=http://localhost:5173
APP_NAME=resumate

# ==================================================
# HUGGINGFACE (opcional, actualmente no se usa)
# ==================================================
# HuggingFace API Key (obtén en https://huggingface.co/settings/tokens)
# Requerido para embeddings en RAG
HUGGINGFACE_API_KEY=